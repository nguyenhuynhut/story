
<% if params[:contact_us] %>
  <% if params[:contact_us][:error] %>
  <div style="font-family:'Trebuchet MS'; color:#FF0000; font-size:14px;">
  
    <%= params[:contact_us][:error] %>
  </div>
<% end %>
<% end %>

<!--creates form, exectues the authenticate method when the submit button is clicked-->
<%= form_tag :action=>'send_contact_us' %>

<p>
  <b>Subject:</b> <br/>
  <%= text_field("contact_us", "subject",:size=>"53" , :maxlength => '255', :value => params[:contact_us] ? params[:contact_us][:subject] : '') %>
</p>

<p>
  <b>Message:</b>
  <b</b><br/>
  <%= text_area("contact_us" ,"message", :size => "40x10", :value => params[:contact_us] ? params[:contact_us][:message] : '') %>
</p>
<script type="text/javascript">

  function checkValidate() {
    if ($("contact_us_subject").getValue() == null || $("contact_us_subject").getValue() == '') {
      alert ("Please type in Subject");
      return false;
    }
    if ($("contact_us_message").getValue() == null || $("contact_us_message").getValue() == '') {
      alert ("Please type in Message");
      return false;
    }

    return true;

 
  }
</script>
<%= recaptcha_tags %>
<input type="submit" value=" Send " onclick=" return checkValidate();"/>
<br/>
<%= link_to 'Back', url_for(:back) %>