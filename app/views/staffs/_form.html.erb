<%= form_for(@staff, :html => { :multipart => true}) do |f| %>
  <% if @staff.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@staff.errors.count, "error") %> prohibited this staff from being saved:</h2>

      <ul>
        <% @staff.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :userid %><br />
    <%= f.text_field :userid %>
  </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password ,:value => ''%>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation %>
    </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <p>
    <%= image_tag @staff.avatar ? @staff.avatar : 'logo.jpg', :size => "60x60" %>
  </p>
  <p>
    Avatar<br />
    <%= file_field_tag 'avatar' %>
  </p>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <% if session[:userid] != nil and Staff.find_by_userid(session[:userid]).userid == 'admin' %>
    <div class="field">
      <%= f.label :is_senior_producer %><br />
      <%= f.check_box :is_senior_producer %>
    </div>
    <div class="field">
      <%= f.label :is_assignment_editor %><br />
      <%= f.check_box :is_assignment_editor %>
    </div>
    <div class="field">
      <%= f.label :is_producer %><br />
      <%= f.check_box :is_producer %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
