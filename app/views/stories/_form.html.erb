<%= form_for(@story) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
        <% @story.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% if session[:approved] == false %>
  <div class="field">
    <%= f.label :approved %><br />
    <%= f.check_box :approved %>
  </div>
<% end %>
  <div class="field">
    <%= f.label :deadline %><br />
    <%= f.date_select :deadline %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :outline %><br />
    <%= f.text_area :outline %>
  </div>
  <div class="field">
    <%= f.label :graphics_collateral %><br />
    <%= f.text_area :graphics_collateral %>
  </div>
  <div class="field">
    <%= f.label :script %><br />
    <%= f.text_field :script %>
  </div>
  <div class="field">
    <%= f.label :producer %><br />

    <%= f.select(:producer_id, Staff.find(:all, :order => 'userid asc').collect {|c| [c.userid, c.id ] }) %>

  </div>
  <div class="field">
    <%= f.label :correspondent %><br />

    <%= f.select(:correspondent_id, Staff.find(:all, :order => 'userid asc').collect {|c| [c.userid, c.id ] }) %>

  </div>
  <div class="field">
    <%= f.label :editor %><br />

    <%= f.select(:editor_id, Staff.find(:all, :order => 'userid asc').collect {|c| [c.userid, c.id ] }) %>

  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
